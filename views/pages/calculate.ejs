<!------------------------------------------------END OF SEARCH INFORMATION----------------------------------------->




<!------------------------------------------------DATABASE INFORMATION---------------------------------------------->

</form>
<% if (locals.DB) { %>
    <% var x=''; %>
    <% if(DB.gender == 'm')  x = 'Male'; %>
    <% if(DB.gender == 'f')  x = 'Female'; %>
    <h4>Your username: <%= DB.user_name%></h4>
    <h4>your weight: <%= DB.weight%></h4>
    <h4>Your height: <%= DB.height%></h4>
    <h4>Your age: <%= DB.age%></h4>
    <h4>Your gender: <%= x %></h4>
   <% } %>
<!---------------------------------------------END OF DATABASE INFORMATION------------------------------------------->

        </main> 
        
        <script>
            // If the user had registered already the calculation form will be hidden
            $(".username").hide();
            $(".informationForm").show();
            $(".previous").on('click',function(){
                $(".username").toggle();
                $(".informationForm").toggle();
               })
            // Hide let's start diet button
                $(".diet").hide();
                $('.calc').on('click', function(){
                $(".diet").show();  
                })

                 // This selection will be hidden untill the calculation results is shown
                 $(".radioDiet").hide();
                  $(".diet").on('click',function(){
                      $(".radioDiet").toggle();
                      })
                     </script>

    
</body>
</html>